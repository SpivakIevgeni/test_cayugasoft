<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:minWidth="25px"
    android:minHeight="25px">
    <RelativeLayout
        android:layout_height="40dp"
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:background="@android:color/transparent">
        <Button
            android:layout_marginLeft="10dp"
            android:text="Rotate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/RotateBtn" />
        <Button
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/RotateBtn"
            android:text="Flip V"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/FlipVerticalBtn" />
        <Button
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/FlipVerticalBtn"
            android:text="Flip H"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/FlipHorizontalBtn" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/ImageContainerLayout">
        <ImageView
            android:src="@drawable/ImageContainerItem"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/ImageContainerItem" />
    </LinearLayout>
</LinearLayout>